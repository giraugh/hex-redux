doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Hex-Redux
  body
    .container
      .topbar
        h1.title(style="float: left;") Hex
        span.titletag BETA
        .glyph#Help
          .material-icons help
        .glyph.spin.last#RestartGame
          .material-icons replay
      .controls
        button.material-icons#TogglePlay pause
        button.material-icons#Step skip_next
        button.material-icons.toggle#AutoRestart autorenew
      .controls
        input.hex-slider#SpeedSlider(
          type="range", 
          max="200", 
          min="0", 
          value="150"
        )
      .square
        #hex-grid
    .editors
      .editor.red
        h3.editortitle.red
          .botname.red.stats-holder
          .editorstats.stats-handle
            .material-icons keyboard_arrow_down
        .editorstats.stats.red.hidden
          .stat#Time
            .material-icons access_time
            .then 0.01s
          .stat#Wins
            .material-icons grade
            .then 2
        .editortext
        button.editorapply.red Apply
        button.editorreset.red Reset
      .editor.blue
        h3.editortitle.blue
          .botname.blue.stats-holder
          .editorstats.stats-handle
            .material-icons keyboard_arrow_down
        .editorstats.stats.blue.hidden
          .stat#Time
            .material-icons access_time
            .then 0.01s
          .stat#Wins
            .material-icons grade
            .then 2
        .editortext
        button.editorapply.blue Apply
        button.editorreset.blue Reset
    .notifications
      //.notification
        .content 
          h1.notification-title Runtime Error
          p 'a' is not defined
